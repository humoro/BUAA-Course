<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AccountDetails">

    <RelativeLayout
        android:id="@+id/account_details_title"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="账户名："
            android:gravity="center|center_horizontal|center_vertical"/>
        <TextView
            android:id="@+id/account_details_username"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textSize="18dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/account_details_divide_a"
        android:layout_below="@id/account_details_title"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/lltGray"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_below="@id/account_details_divide_a"
        android:id="@+id/account_details_all_schedule"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="共创建："/>
        <TextView
            android:id="@+id/account_details_all_schedule_number"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|left"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/account_details_divide_b"
        android:layout_below="@id/account_details_all_schedule"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/lltGray"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_below="@id/account_details_divide_b"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp">
        <TextView
            android:id="@+id/account_details_expectation_fiveday"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="未来五天日程"/>
        <View
            android:id="@+id/account_details_divide_c"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/lltGray"
            android:layout_below="@id/account_details_expectation_fiveday"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"/>
        <ListView
            android:id="@+id/account_details_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/account_details_divide_c"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>

</RelativeLayout>